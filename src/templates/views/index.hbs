<!DOCTYPE html>
    <html>
        {{>header}}
    <body>

        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="#">SCAM RAMS</a>
            <button class="navebar-toggler top-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">Game Settings</button>
            <button id="show" class="navebar-toggler top-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">Profile Settings</button>
            <button id="show2" class="navebar-toggler top-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">Help</button>
        </nav>

        <div class="center hideform">
            <button id="close" style="float: right;">X</button>
                <form>
                <input type="text" name="firstname" value="Username">
                <input type="text" name="lastname" value="Password">
                <br><br>
                <input type="submit" value="Submit">
            </form>
        </div>

        <div class="center2 hideform">
            <button id="close2" style="float: right;">X</button>
                <div>Here is the help page.</div>
            </form>
        </div>
    
        <div id="main-application">
            <div class="main-panel" id="left-panel">
                <h1>Hunt</h1>
                <div><img src="/google-map-web.jpg"></div>
                <div class="input-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button id="enter-answer" class="btn btn-outline-secondary" type="button">Enter Answer</button>
                        </div>
                        <input id="answer-box" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                        <div id="isCorrect"></div>
                    </div>
                </div>
            </div>
            <div class="main-panel" id="mid-panel">
                <h1 id="difficulty">
                    Difficulty
                </h1>
                <h2>Clues:</h2>
                <div id="clue">Clues pop up here</div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">25%</div>
                </div>
            </div>
            <div class="main-panel" id="right-panel">
                
            <div class="panel panel-primary" id="result_panel">
                <div class="panel-heading"><h1 class="panel-title">Objectives</h1>
            </div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li id="s1" class="list-group-item"><button><strong>Spot 1</strong></button>
                        </li>
                        <li id="s2" class="list-group-item"><button><strong>Spot 2</strong></button>
                        </li>
                        <li id="s3" class="list-group-item"><button><strong>Spot 3</strong></button>
                        </li>
                        <li id="s4" class="list-group-item"><button><strong>Spot 4</strong></button>
                        </li>
                    </ul>
                </div>
            </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script>
            $('#show').on('click', function () {
                $('.center').show();
                $(this).hide();
            })

            $('#close').on('click', function () {
                $('.center').hide();
                $('#show').show();
            })
            $('#show2').on('click', function () {
                $('.center2').show();
                $(this).hide();
            })

            $('#close2').on('click', function () {
                $('.center2').hide();
                $('#show').show();
            })
        </script>
        <script src="/js/objtracker.js"></script>
    </body>
</html>
